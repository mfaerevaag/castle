#!/bin/env sh
# sys info - temp

readonly PREFIX="T: "

main() {
    local temp=$(cat /sys/bus/platform/devices/coretemp.0/temp1_input)
    local s=${temp%???}
    local c

    if (( $s > 80 )); then
        c=$RED
    elif (( $s > 60 )); then
        c=$YEL
    fi

    echo -e "${s}Â°C"
    echo -e "${c}"
}
